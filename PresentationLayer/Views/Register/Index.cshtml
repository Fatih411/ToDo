@model UserRegister
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>EXISTING LOGIN FORM</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">

    <style>
        body {
            background: linear-gradient(to bottom, #3498db, #9b59b6);
            font-family: 'Quicksand', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
        }

        .registerDetails {
            background: #fff;
            border-radius: 4px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
            max-width: 500px;
            width:400px;
            padding: 20px;
        }

        .registerDetails h2 {
                color: #333;
                font-size: 24px;
                margin-bottom: 20px;
            }

        .registerDetails form input {
                width: 90%;
                padding: 12px;
                margin: 8px 0;
                border: none;
                border-bottom: 2px solid #3498db;
                outline: none;
                transition: border-color 0.5s;
            }
    </style>
</head>

<body>
    <div class="registerDetails">
        <h2>To Do List Kayıt Ol</h2>
        <form method="post" >
          
                <div class="form-sub-w3ls">
                    <input placeholder="Kullanıcı Adı" type="text" asp-for="UserName" required="">
                </div>
                <div class="form-sub-w3ls">
                <input placeholder="Email" class="mail" asp-for="Email" type="email" required="">
                </div>
                <div class="form-sub-w3ls">
                <input placeholder="Şifre" type="password" asp-for="Password" required="">
                </div>
                <div class="form-sub-w3ls">
                <input placeholder="Tekrar Şifre" type="password" asp-for="PasswordConfirm" required="">
                </div>
                <div class="text-white" asp-validation-summary="ModelOnly">
                    <br/>
                </div>
                <div class="submit-w3l">
                    <input type="submit" value="Kayıt Ol">
                    <br/>
                    <a href="/Login/Index">Bir Hesabınız Var mı?</a>
                </div>
           </form>
    </div>

    <script type="text/javascript" src="js/jquery-2.1.4.min.js"></script>
    <script src="js/jquery.magnific-popup.js" type="text/javascript"></script>
    <script>
       
    </script>
</body>
</html>
